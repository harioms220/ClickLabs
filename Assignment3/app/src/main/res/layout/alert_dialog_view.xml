<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/alert_dialog"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <Button
        android:id="@+id/alert_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="@string/button_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_drawable"
        />
    <Button
        android:id="@+id/alert_button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/alert_button_view"
        android:text="@string/button_edit"
        />
    <Button
        android:id="@+id/alert_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:layout_below="@id/alert_button_edit"
        android:text="@string/button_delete"
        />
</RelativeLayout>